<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:src="@drawable/ic_back"
            android:background="@null"
            android:onClick="onBackPressed"  android:layout_height="" android:layout_width=""/>

        <TextView
            android:text="Login"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"  android:layout_height="" android:layout_width=""/>

        <TextView
            android:text="Log back in to enjoy life upgrades!"
            android:textSize="14sp"  android:layout_height="" android:layout_width=""/>

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="20dp"
            android:hint="Email Address" android:layout_height="" android:layout_width="">
            <com.google.android.material.textfield.TextInputEditText
                android:inputType="textEmailAddress" android:layout_height="" android:layout_width=""/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="12dp"
            android:hint="Password" android:layout_height="" android:layout_width="">
            <com.google.android.material.textfield.TextInputEditText
                android:inputType="textPassword" android:layout_height="" android:layout_width=""/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:text="Sign In"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/purple"
            android:textColor="@android:color/white" android:layout_height="" android:layout_width=""/>

        <!-- Divider -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">
            <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:background="#888"/>
            <TextView android:text="  ii  " android:textColor="#888"/>
            <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:background="#888"/>
        </LinearLayout>

        <Button
            android:text="Sign Up"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/purple"
            android:textColor="@android:color/white"
            android:onClick="goToRegister"/>
    </LinearLayout>
</ScrollView>
